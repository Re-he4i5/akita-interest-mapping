<h2>Sign up</h2>

<%= form_with model: @user,url: user_registration_path,method: :post do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :last_name,placeholder: "姓",class: "form-control" %>
  </div>

  <div class="field">
    <td><%= f.text_field :first_name,placeholder: "名",class: "form-control" %></td>
  </div>

  <div class="field">
    <%= f.text_field :last_name_kana,placeholder: "セイ",class: "form-control" %>
  </div>

  <div class="field">
    <%= f.text_field :user_name,placeholder: "Tabi人名（ユーザー名）",class: "form-control" %>
  </div>

  <div class="field">
    <%= f.text_field :first_name_kana,placeholder: "メイ",class: "form-control" %>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "publics/shared/links" %>
